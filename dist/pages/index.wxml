    <view class="ad-container" hidden="{{!adshow}}">
        <view class="ad-warp">
            <swiper class="ad-swiper" autoplay="true" interval="3000" duration="500">
              <block  wx:for="{{$ad$adItems}}" wx:key="wx:key">
                <swiper-item>
                  <view class="ad-swiper-item">
                      <view>
                          <image mode="aspectFit" src="{{item[0].url}}" class="slider" bindtap="$ad$tap" data-wpytap-a="{{item[0].id}}"/>
                      </view>
                      <view>
                          <image mode="aspectFit" src="{{item[1].url}}" class="slider" bindtap="$ad$tap" data-wpytap-a="{{item[1].id}}"/>
                      </view>
                  </view>
                </swiper-item>
